<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:id="@+id/skeleton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_margin="5dp"
                android:id="@+id/feed_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_toEndOf="@id/feed_avatar"
                android:id="@+id/feed_author"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="50dp"
                android:layout_height="14dp"
                android:id="@+id/feed_time_info"
                android:layout_toEndOf="@id/feed_avatar"
                android:layout_below="@id/feed_author"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>

        </com.faltenreich.skeletonlayout.SkeletonLayout>

        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/skeleton2">
            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"/>

        </com.faltenreich.skeletonlayout.SkeletonLayout>

        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/skeleton3">
            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"/>

        </com.faltenreich.skeletonlayout.SkeletonLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>