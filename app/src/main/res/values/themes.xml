<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dnevnikru" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bad</item>
        <item name="colorPrimaryVariant">#851A1A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF554C99</item>
        <item name="colorSecondaryVariant">#342E5C</item>
        <item name="colorOnSecondary">#FFF8F8</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/title_text</item>
    </style>

    <style name="Theme.Dnevnikru.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dnevnikru.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dnevnikru.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>